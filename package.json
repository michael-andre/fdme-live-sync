{
  "name": "fdme-live-sync",
  "version": "0.2.2",
  "description": "A background app for live reporting of match chrono & score",
  "main": "dist/main.js",
  "author": "Michaël André",
  "license": "ISC",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "npx eslint .",
    "start": "npm run build && electron .",
    "start:test": "npm run build && electron . --mode=test",
    "pack": "npm run build && electron-builder --dir --win",
    "dist": "npm run build && electron-builder --win",
    "release": "npm run build && electron-builder --win --publish always"
  },
  "dependencies": {
    "electron-log": "^5.2.2",
    "firebase": "^11.0.1",
    "lodash": "^4.17.21",
    "luxon": "^3.5.0",
    "readline-reverse": "^1.0.1",
    "rxjs": "^7.8.1",
    "tesseract.js": "^5.1.1",
    "tslib": "^2.8.1",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.12",
    "@types/luxon": "^3.4.2",
    "@types/w3c-image-capture": "^1.0.10",
    "@types/ws": "^8.5.13",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9.14.0",
    "lodash": "^4.17.21",
    "luxon": "^3.5.0",
    "rxjs": "^7.8.1",
    "tesseract.js": "^5.1.1",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.13.0"
  },
  "build": {
    "appId": "fdme-live-sync",
    "extends": null,
    "directories": {
      "output": "build"
    },
    "win": {
      "target": "portable",
      "publish": [
        "github"
      ]
    }
  }
}
