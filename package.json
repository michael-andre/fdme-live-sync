{
  "name": "fdme-live-sync",
  "version": "0.1.10",
  "description": "A background app for live reporting of match chrono & score",
  "main": "dist/main.js",
  "author": "Michaël André",
  "license": "ISC",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "eslint --ext .ts ./src",
    "start": "npm run build && electron .",
    "start:test": "npm run build && electron . --mode=test",
    "pack": "electron-builder --dir --win",
    "dist": "electron-builder --win",
    "release": "electron-builder --win --publish always"
  },
  "dependencies": {
    "electron-log": "^5.1.1",
    "firebase": "^10.8.0",
    "lodash": "^4.17.21",
    "luxon": "^3.4.4",
    "readline-reverse": "^1.0.1",
    "rxjs": "^7.8.1",
    "tesseract.js": "^5.0.4",
    "tslib": "^2.6.2"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.12",
    "@types/luxon": "^3.4.2",
    "@types/w3c-image-capture": "^1.0.10",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "electron": "^28.2.2",
    "electron-builder": "^24.9.1",
    "firebase": "^10.8.0",
    "lodash": "^4.17.21",
    "luxon": "^3.4.4",
    "rxjs": "^7.8.1",
    "tesseract.js": "^5.0.4",
    "typescript": "^5.3.3"
  },
  "build": {
    "appId": "fdme-live-sync",
    "extends": null,
    "directories": {
      "output": "build"
    },
    "win": {
      "target": "portable",
      "publish": [
        "github"
      ]
    }
  }
}
